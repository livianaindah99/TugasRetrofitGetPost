<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KirimActivity">

    <TextView
        android:id="@+id/text_title2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Form Tambah Data Mahasiswa"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="7pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtnim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NIM"
        android:textSize="8pt"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="40dp"/>

    <EditText
        android:id="@+id/nim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"
        android:layout_marginRight="20dp"
        android:textSize="7pt"
        android:hint="Masukkan Nim Anda"/>

    <TextView
        android:id="@+id/txtnama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textSize="8pt"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/nim"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="7pt"
        app:layout_constraintTop_toBottomOf="@+id/nim"
        android:layout_marginTop="35dp"
        android:layout_marginRight="20dp"
        android:hint="Masukkan Nama Anda"/>

    <TextView
        android:id="@+id/txtalamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alamat"
        android:textSize="8pt"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/nama"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="7pt"
        app:layout_constraintTop_toBottomOf="@+id/nama"
        android:layout_marginTop="35dp"
        android:layout_marginRight="20dp"
        android:hint="Masukkan Alamat Anda"/>

    <TextView
        android:id="@+id/txtjk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jenis Kelamin"
        android:textSize="8pt"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/alamat"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/jk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/txtjk"
        android:layout_marginTop="10dp"
        android:textSize="7pt"
        android:layout_marginRight="20dp"
        android:hint="Masukkan Jenis kelamin Anda"/>

    <TextView
        android:id="@+id/txtnotelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nomor Telepon"
        android:textSize="8pt"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/jk"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/notelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/txtnotelp"
        android:layout_marginTop="10dp"
        android:textSize="7pt"
        android:layout_marginRight="20dp"
        android:hint="Masukkan Nomor Telepon Anda"/>

    <Button
        android:id="@+id/btnproses"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="8pt"
        app:layout_constraintTop_toBottomOf="@+id/notelp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20pt"
        android:text="PROSES"/>

</androidx.constraintlayout.widget.ConstraintLayout>